
<div class="wideRow">
    <label for="title"  class="itemNarrow">Title:</label>
    <input type="text" class="itemWide" id="title" name="title" value="<%= post.title %>" placeholder="Title" autocomplete="off"/>
</div>


<div class="wideRow">
    
    <label for="body"  class="itemNarrow">Body:</label>
    <textarea class="itemWide" id="body" cols="30" rows="5" name="body" value="<%= post.body %>"></textarea>

</div>

<div>

    <label for="img">Attach file (Max size 2MB):</label>
    <input type="file" id="imgage" name="image"/>

</div>


<input type="submit" value="Save" name="enviar" id="enviar">

<br />

<a href="/posts" class="button">Cancel</a>